<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Set the default text color for the entire application -->
        <item name="android:textColor">#000000</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:tint">@android:color/black</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@android:color/black</item>
    </style>
</resources>


